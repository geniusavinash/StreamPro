# RTMP Camera Streaming Platform - Production Environment Configuration
# Copy this file to .env in the backend directory and update the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=camera_user
DB_PASSWORD=camera_password_2024
DB_NAME=camera_streaming
DB_SYNCHRONIZE=false
DB_LOGGING=false

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
API_PREFIX=api/v1

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2024
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-2024
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# RTMP STREAMING CONFIGURATION
# =============================================================================
RTMP_HOST=api.getfairplay.org
RTMP_PORT=1935
RTMP_APPLICATION=live

# HLS Configuration
HLS_PATH=/var/www/hls
HLS_FRAGMENT=6
HLS_PLAYLIST_LENGTH=30

# DASH Configuration
DASH_PATH=/var/www/dash
DASH_FRAGMENT=6
DASH_PLAYLIST_LENGTH=30

# Recording Configuration
RECORDING_PATH=/var/www/recordings
RECORDING_MAX_SIZE=1000M
RECORDING_INTERVAL=1h

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=https://getfairplay.org
CORS_CREDENTIALS=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=100MB
UPLOAD_PATH=/var/www/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/avi,video/mov

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=/var/log/camera-streaming.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@getfairplay.org

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# CDN CONFIGURATION (Optional)
# =============================================================================
CDN_URL=https://cdn.getfairplay.org
CDN_ENABLED=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/camera-streaming

# =============================================================================
# SSL CONFIGURATION
# =============================================================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/getfairplay.org.crt
SSL_KEY_PATH=/etc/ssl/private/getfairplay.org.key

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================
NGINX_CONF_PATH=/etc/nginx/sites-available/camera-streaming-platform
NGINX_ENABLED_PATH=/etc/nginx/sites-enabled/camera-streaming-platform

# =============================================================================
# PM2 CONFIGURATION
# =============================================================================
PM2_APP_NAME=camera-streaming-backend
PM2_INSTANCES=1
PM2_MAX_MEMORY=1G
PM2_RESTART_DELAY=4000
PM2_MAX_RESTARTS=10

# =============================================================================
# DEVELOPMENT OVERRIDES (Set to false in production)
# =============================================================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
MOCK_DATA=false