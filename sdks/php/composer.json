{
    "name": "camera-streaming/sdk",
    "description": "Official PHP SDK for the Camera Streaming Platform API",
    "type": "library",
    "keywords": ["camera", "streaming", "rtmp", "hls", "webrtc", "surveillance", "api", "sdk"],
    "homepage": "https://github.com/camera-streaming/php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Camera Streaming Platform",
            "email": "support@camera-streaming.example.com",
            "homepage": "https://camera-streaming.example.com"
        }
    ],
    "support": {
        "issues": "https://github.com/camera-streaming/php-sdk/issues",
        "source": "https://github.com/camera-streaming/php-sdk",
        "docs": "https://docs.camera-streaming.example.com/php-sdk"
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.0",
        "psr/http-message": "^1.0",
        "psr/log": "^1.0|^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.6",
        "php-cs-fixer/shim": "^3.0",
        "mockery/mockery": "^1.4",
        "vlucas/phpdotenv": "^5.0"
    },
    "suggest": {
        "monolog/monolog": "For logging support",
        "reactphp/socket": "For WebSocket support"
    },
    "autoload": {
        "psr-4": {
            "CameraStreaming\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CameraStreaming\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=8",
        "cs-check": "phpcs src tests --standard=PSR12",
        "cs-fix": "php-cs-fixer fix src tests",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-cs-fixer/shim": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}