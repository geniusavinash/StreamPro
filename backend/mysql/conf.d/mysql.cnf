# MySQL Configuration for Camera Streaming Platform
# Optimized for performance and UTF-8 support

[mysql]
default-character-set = utf8mb4

[mysqld]
# Basic Settings
default-storage-engine = InnoDB
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init-connect = 'SET NAMES utf8mb4'

# Connection Settings
max_connections = 200
max_connect_errors = 1000
wait_timeout = 28800
interactive_timeout = 28800

# Buffer Settings (Optimized for camera streaming data)
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2

# Query Cache (for read-heavy operations)
query_cache_type = 1
query_cache_size = 32M
query_cache_limit = 2M

# Table Settings
table_open_cache = 400
table_definition_cache = 400

# MyISAM Settings
key_buffer_size = 32M
myisam_sort_buffer_size = 8M

# Logging
general_log = 0
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

# Binary Logging (for replication if needed)
log-bin = mysql-bin
binlog_format = ROW
expire_logs_days = 7
max_binlog_size = 100M

# Security
local-infile = 0

# Performance Schema
performance_schema = ON

# Time Zone
default-time-zone = '+00:00'

# SQL Mode (strict mode for data integrity)
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO

# InnoDB Settings for better performance with large datasets
innodb_file_per_table = 1
innodb_flush_method = O_DIRECT
innodb_io_capacity = 200
innodb_read_io_threads = 4
innodb_write_io_threads = 4

# Temporary Tables
tmp_table_size = 32M
max_heap_table_size = 32M

# Sort and Group By
sort_buffer_size = 2M
read_buffer_size = 128K
read_rnd_buffer_size = 256K
join_buffer_size = 128K

[mysqldump]
quick
quote-names
max_allowed_packet = 16M

[isamchk]
key_buffer_size = 16M